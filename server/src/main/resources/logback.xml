<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/home/godzilla/Documents/VidClick-API/server/src/main/resources/logs.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
